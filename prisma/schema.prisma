generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
}

model accolades {
  id       BigInt  @id
  accolade String  @unique @db.VarChar(50)
  games    games[]
}

model games {
  steam_id     BigInt     @id
  players      BigInt
  last_updated BigInt
  image_link   String     @db.VarChar(100)
  accolade     BigInt?
  accolades    accolades? @relation(fields: [accolade], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@index([players], map: "idx_players")
}
